#include<iostream>
#include<iomanip>
using namespace std;
class account
{   
    protected:
    long double deposit,withdrawal,total;
    unsigned long long int acc_no,ph_no,acc_balance;
    string name;
    char acc_type;
    public:
     void pattern()
    {
        int a=1,b=80;
        for(int i=0;i<a;i++)
        {
            for(int j=0;j<b;j++)
            {
                cout<<"*";
            }
            cout<<endl;
        }
    }
     void space1()
    {
        cout<<setw(10)<<":: ENTER THE ACCOUNT DETAILS ::"<<endl;
    }
    void space2()
    {
        cout<<setw(10)<<":: ACCOUNT DETAILS ::"<<endl;
    }
    void getdata();
    void putdata();
};
void account :: getdata()
    {
            cout<<"Enter the name of account holder : ";
            cin>>name;
            cout<<"Enter the phone number : ";
            cin>>ph_no;
            cout<<"Enter the account number : ";
            cin>>acc_no;
            cout<<"Enter the type of account[J/S] : ";
            cin>>acc_type;
            cout<<"Enter the account balance : ";
            cin>>acc_balance;
    }
void account :: putdata()
    {
            cout<<"The name of account holder : "<<name<<endl;
            cout<<"The phone number : "<<ph_no<<endl;
            cout<<"The account number : "<<acc_no<<endl;
            cout<<"The type of account[J/S] : "<<acc_type<<endl;
            cout<<"The account balance : "<<acc_balance<<endl;
            cout<<"The total amount of your account is : "<<total<<endl;

    }
class Deposit : public account
{
    public:
    void Dep()
     {
            cout<<"Deposit amount : ";
            cin>>deposit;
            total=acc_balance+deposit;
            cout<<"total amount is :"<<total<<endl;
     }
};
class Withdrawal : public account
 {
    public:
    void With()
    {
            cout<<"Withdrawal amount : ";
            cin>>withdrawal;
            total=acc_balance-withdrawal;
            cout<<"total amount is :"<<total<<endl;
    }
 };
 class close : public account
{
    protected:
     string reason;
     public:
     void gtdata()
    {
            cout<<"Enter the name of account holder : ";
            cin>>name;
            cout<<"Enter the phone number : ";
            cin>>ph_no;
            cout<<"Enter the account number : ";
            cin>>acc_no;
            cout<<"Reason why are you closing an account :";
            cin>>reason;
    }
    void ptdata()
    {
            cout<<"The name of account holder : "<<name<<endl;
            cout<<"The phone number : "<<ph_no<<endl;
            cout<<"The account number : "<<acc_no<<endl;
            cout<<"Reason why are you closing an account is: "<<reason<<endl;
    }
};
class new_acc : public account
{
    protected:
    unsigned long long int aadhar_num,phn_no,annual_income;
